<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_8"
        app:cardBackgroundColor="@color/colorGrayLight"
        app:cardElevation="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="@dimen/dimen_48">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgv_emoticon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="@dimen/dimen_4"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorGrayLight"/>
    <TextView
            android:id="@+id/tv_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_4"
            android:textStyle="bold"
            android:text="@string/Shop1"/>
</LinearLayout>
</android.support.v7.widget.CardView>